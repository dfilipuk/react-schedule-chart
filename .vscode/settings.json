{
  "files.exclude": {
    "**/build": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.workingDirectories": [{ "directory": "source" }],
  "jest.rootPath": "source",
  "jest.jestCommandLine": "yarn test",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-file",
    "onStartup": ["all-tests"]
  }
}
